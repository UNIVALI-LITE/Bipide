<Window x:Class="BIPIDE_4._0.ViewResources.FormNewDocument"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="600"  
        Height="500"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        ShowInTaskbar="False" 
        Padding="0" 
        UseLayoutRounding="False"
        WindowStyle="ToolWindow"
        Icon="/BIPIDE 4.0;component/ImageResources/new16.png"
        Title="{DynamicResource ResourceKey=NDFormTitle}" 
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\LanguageResources\Component\Portuguese.xaml"/>
                <ResourceDictionary Source="..\LanguageResources\Tips\Portuguese.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Effect>
        <DropShadowEffect BlurRadius="10"/>
    </Window.Effect>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        
            <TreeView x:Name="_TreeView"
                      Grid.Column="0" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      ItemsSource="{Binding DeviceGroups}" >
                <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                    <StackPanel Orientation="Horizontal" Width="Auto">
                        <Image Width="16" Height="16" Margin="3,0"/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView>

            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          ShowsPreview="True"
                          Width="3"/>

            <ListView x:Name="_ListView" 
                      Grid.Column="2" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Label Content="{DynamicResource ResourceKey=NDLabelNewName}" 
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom"               
               Margin="10,0,0,10" 
               Width="64" 
               Height="25" />
        <TextBox x:Name="_TextBoxFile"
                 Margin="79,0,169,10" 
                 TextWrapping="Wrap" 
                 Height="22" 
                 VerticalAlignment="Bottom"/>
        <Button x:Name="_ButtonAdd"
                Content="{DynamicResource ResourceKey=NDButtonAdd}" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Margin="0,0,90,10" 
                Width="74" 
                Click="_ButtonAdd_Click"/>
        <Button x:Name="_ButtonCancel"
                Content="{DynamicResource ResourceKey=NDButtonCancel}" 
                Margin="0,0,10,10" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Width="75" 
                Height="20" 
                Click="_ButtonCancel_Click" />
        </Grid>
</Window>
